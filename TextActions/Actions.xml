<?xml version="1.0" encoding="UTF-8"?>
<action-recipes>	
	<action id="be.sken.drupal.org" category="actions.text.drupal/drupal.lookup/lookup.1">
		<class>Spice</class>
		<title>Lookup on drupal.org</title>
		<key-equivalent>command shift d</key-equivalent>
		<setup>
			<script>lookup</script>
			<syntax-context>php *</syntax-context>
			<arguments>
				<array>
					<string>d</string>
				</array>
			</arguments>
		</setup>
	</action>
	
  <action id="be.sken.drupal.api" category="actions.text.drupal/drupal.lookup/lookup.2">
  	<class>Spice</class>
  	<title>Lookup on api.drupal.org</title>
  	<key-equivalent>command shift a</key-equivalent>
  	<setup>
  		<script>lookup</script>
  		<syntax-context>php *</syntax-context>
  		<arguments>
  			<array>
  				<string>a</string>
  			</array>
  		</arguments>
  	</setup>
  </action>
</action-recipes>